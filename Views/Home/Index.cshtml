@{
    ViewBag.Title = "Awesome";
}

<div id="container">
    <div id="content">
        <div id="home">
            <div id="header"><img src="/content/images/header.png" width="1024" height="66" /></div>
            <div class="headermessage">
                &nbsp;
                <span id="yourTurn" class=" hide alternate-color">Waiting for someone else to play</span>
                <span id="myTurn" class=" hide alternate-color">It's your turn</span>
                <span id="gameEnd" class=" hide alternate-color">Game won ! you can now safely reset the board :)</span>
            </div>
            <div id="main">
                <div id="col-left">
                    <div class="joueur">@*<img src="/content/images/joueur-vert.png" border=0 name="JGG" id="JGG" alt="JGG" width="130" height="65" />*@</div>
                    <div class="pion"><img src="/content/images/blank.png" border=0 name="JG" id="JG" alt="JG" width="84" height="84" /></div>
                    <div class="tour"><p>Score<span class="line"></span></p><p class="numero"><label id="scorJ">0</label></p></div>
                </div><!-- close #col-left-->
                <div id="center">

                    <div id="division">
                        <div class="case"><div class="square" data-coord="0,0" style="width:147px;height:147px;">&nbsp;</div></div>
                        <div class="case"><div class="square" data-coord="0,1" style="width:147px;height:147px;">&nbsp;</div></div>
                        <div class="case"><div class="square" data-coord="0,2" style="width:147px;height:147px;">&nbsp;</div></div>

                        <div class="case"><div class="square" data-coord="1,0" style="width:147px;height:147px;">&nbsp;</div></div>
                        <div class="case"><div class="square" data-coord="1,1" style="width:147px;height:147px;">&nbsp;</div></div>
                        <div class="case"><div class="square" data-coord="1,2" style="width:147px;height:147px;">&nbsp;</div></div>

                        <div class="case"><div class="square" data-coord="2,0" style="width:147px;height:147px;">&nbsp;</div></div>
                        <div class="case"><div class="square" data-coord="2,1" style="width:147px;height:147px;">&nbsp;</div></div>
                        <div class="case"><div class="square" data-coord="2,2" style="width:147px;height:147px;">&nbsp;</div></div>
                    </div>
                </div><!-- close #center-->
                <div id="col-right">
                    <div class="joueur">@*<img src="/content/images/ordinateur-vert.png" name=JDD alt=JDD width="130" height="65" />*@</div>
                    <div class="pion"><img src="/content/images/blank.png" name=JD alt=JD width="84" height="84" /></div>
                    <div class="tour"><p>Score<span class="line"></span></p><p class="numero"><label id="scorO">0</label></p></div>
                </div><!-- close #col-right-->
                <div class="clear"></div>
            </div><!-- close #main-->

            <div id="footer" style="text-align:center">
                <input type="button" id="reset" value="reset" class="btn" />
                <div id="usersCount"></div>

            </div>
        </div>
    </div><!-- close #content-->
</div><!-- close #container-->
<!-- div gagner -->
<div id="popup-gagner" style="display: none;">
    <div id="bouton-rejouer"><a href="#"><img src="/content/images/bouton-replay.png" width="154" height="52" /></a></div>
</div>
<!-- div perdu -->
<div id="popup-perdu" style="display: none;">
    <div id="bouton-rejouer"><a href="#"><img src="/content/images/bouton-replay.png" width="154" height="52" /></a></div>
</div>
<!-- div egalite -->
<div id="popup-egalite" style="display: none;">
    <div id="bouton-rejouer"><a href="#"><img src="/content/images/bouton-replay.png" width="154" height="52" /></a></div>
</div>




@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.0.2.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
   
    <script src="~/Scripts/View/Index.js"></script>
}